<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout_confirmed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#1E0A70DD"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:contentPadding="2dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_const_layout_confirmed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameData2HolderTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Lorem ipsum..."
                android:textAppearance="@style/TextAppearance.AppCompat.Large">

            </TextView>

            <TextView
                android:id="@+id/locationData2TV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameData2HolderTV"
                android:padding="4dp"
                android:text="Ja:"
                android:textSize="16sp">

            </TextView>

            <TextView
                android:id="@+id/dateData2TV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationData2TV"
                android:padding="4dp"
                android:text="Nein:"
                android:textSize="16sp">

            </TextView>

            <TextView
                android:id="@+id/starttimeData2TV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateData2TV"
                android:padding="4dp"
                android:text="Gesamt:"
                android:textSize="16sp">

            </TextView>

            <TextView
                android:id="@+id/locationData2HolderTV"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameData2HolderTV"
                android:layout_toRightOf="@+id/locationData2TV"
                android:padding="4dp"
                android:text="Lorem ipsum.."
                android:textSize="16sp">

            </TextView>

            <TextView
                android:id="@+id/dateData2HolderTV"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationData2TV"
                android:layout_toRightOf="@+id/locationData2TV"
                android:padding="4dp"
                android:text="Lorem ipsum.."
                android:textSize="16sp">

            </TextView>

            <TextView
                android:id="@+id/starttimeData2HolderTV"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateData2TV"
                android:layout_toRightOf="@+id/locationData2TV"
                android:padding="4dp"
                android:text="Lorem ipsum.."
                android:textSize="16sp">

            </TextView>
            
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>